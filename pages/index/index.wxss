/* 容器样式 */
.container {
  padding: 0;
  background-color: #f6f6f6;
}

/* 搜索栏样式 */
.search-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 80rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-bar icon {
  margin-right: 10rpx;
  color: #999;
}

.search-bar text {
  color: #999;
  font-size: 28rpx;
}

/* 时间轴样式 */
.timeline {
  padding: 30rpx;
}

.timeline-group {
  margin-bottom: 60rpx;
}

.timeline-date {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 30rpx;
}

.timeline-items {
  position: relative;
}

.timeline-items::before {
  content: '';
  position: absolute;
  left: 16rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background: #e0e0e0;
}

.timeline-item {
  position: relative;
  padding-left: 50rpx;
  margin-bottom: 30rpx;
}

.timeline-dot {
  position: absolute;
  left: 0;
  top: 30rpx;
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f0f0;
  border-radius: 50%;
  z-index: 1;
  font-size: 20rpx;
}

.timeline-content {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.resource-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.resource-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.resource-icon-box {
  width: 80rpx;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.resource-icon {
  font-size: 40rpx;
  color: #333;
}

.resource-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.resource-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
}

.tag {
  align-self: flex-start;
  background: #e8f5e9;
  color: #4caf50;
  padding: 4rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.copy-btn {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  margin-left: 20rpx;
}

.copy-icon {
  font-size: 24rpx;
  color: #666;
  margin-right: 8rpx;
}

.copy-number {
  font-size: 24rpx;
  color: #666;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
}