/* 容器样式 */
.container {
  padding: 0;
  background-color: #f6f6f6;
}

/* 搜索框样式 */
.search-box {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: #fff;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-bar {
  display: flex;
  align-items: center;
  background: #f6f6f6;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
}

.search-input {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  margin: 0 20rpx;
}

/* 搜索结果样式 */
.search-results {
  margin-top: 100rpx;
  padding: 20rpx;
}

.result-header {
  padding: 20rpx 0;
}

.result-count {
  font-size: 28rpx;
  color: #666;
}

.result-list {
  margin-top: 20rpx;
}

.result-item {
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.result-desc {
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.result-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  background: #f0f0f0;
  color: #666;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

/* 搜索状态样式 */
.searching,
.no-result,
.search-placeholder {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.search-placeholder {
  margin-top: 200rpx;
}